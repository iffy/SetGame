                    ellipse(this.x+ellipseLength*1.5,this.y,                               ellipseLength,ellipseWidth);
                    ellipse(this.x-ellipseLength*1.5,this.y,                               ellipseLength,ellipseWidth);
                    ellipse(this.x,this.y,ellipseLength,                                   ellipseWidth);

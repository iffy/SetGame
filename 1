            stroke(10, 194, 59);
            fill(10, 194, 59);
            //num3 and color2 GREEN and pattern1 BLANK
            if(this.pattern===1){
                noFill();
                /*num3 and color2 GREEN and pattern1 BLANK and                  shape1 CIRCLE*/
